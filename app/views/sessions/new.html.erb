<h1>Log In</h1>

<% form_tag session_path, :id => "new_session" do -%>
<p><%= label_tag 'login' %><br />
<%= text_field_tag 'login', @login %></p>

<p><%= label_tag 'password' %><br/>
<%= password_field_tag 'password', nil %></p>


<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><%= submit_tag 'Log in' , :class => 'medium green awesome'%></p>
<p><%= link_to 'Forgot Username / Password?', :forgot %> </p>
<% end -%>

<p>or login with Facebook connect</p>
<%= fb_login_button("window.location = '/users/link_user_accounts';")%>
